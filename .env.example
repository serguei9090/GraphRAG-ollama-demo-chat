# FalkorDB configuration
FALKORDB_HOST=127.0.0.1
FALKORDB_PORT=6379
# FALKORDB_USERNAME=
# FALKORDB_PASSWORD=

# Knowledge graph identity
GRAPHRAG_KG_NAME=graphrag_demo

# LiteLLM models used for ontology extraction and Cypher generation
GRAPHRAG_EXTRACTION_MODEL=openai/gpt-4.1
# GRAPHRAG_CYPHER_MODEL=groq/llama-3.1-8b-instant

# Ollama settings
OLLAMA_MODEL=llama3.1:8b
OLLAMA_BASE_URL=http://localhost:11434

# Behaviour toggles
GRAPHRAG_AUTO_REFRESH_ONTOLOGY=true
GRAPHRAG_RESET_BEFORE_INGEST=false
# Set to true to bypass the GraphRAG backend entirely (useful for CI/offline)
# GRAPHRAG_USE_STUB=true

# LiteLLM credentials (example for OpenAI)
# OPENAI_API_KEY=sk-...
